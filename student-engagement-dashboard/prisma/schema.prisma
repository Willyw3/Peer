generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id      String  @id @default(uuid())
  fname   String
  lname   String
  email   String
  classes Class[]
}

model Class {
  id       String    @id @default(uuid())
  students Student[]
  topics   Topic[]
  recordings ClassRecording[]
}

model Topic {
  name    String
  classId String 
  class   Class  @relation(fields: [classId], references: [id])
  @@id([classId, name])
}

model ClassRecording {
  classId String
  recordingNum Int @default(autoincrement())
  url String
  class Class @relation(fields: [classId], references: [id])
  @@id([classId, recordingNum])
}
